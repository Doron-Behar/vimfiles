{
  "languageserver": {
    "cquery": {
      "command": "cquery",
      "args": ["--log-file=/tmp/cq.log"],
      // disable automatic reveal output channel
      "revealOutputChannelOn": "never",
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  // This pends until https://github.com/atom/superstring/pull/72 and https://github.com/tree-sitter/node-tree-sitter/pull/45 are merged
  "sh.enable": false,
  "lua.commandPath": "/home/doron/.nix-profile/bin/lua-lsp",
  "diagnostic-languageserver.filetypes": {
    "text": "write-good",
    "pandoc": "write-good",
    "markdown": "write-good",
    "mail": "write-good",
    "gitsendmail": "write-good",
  },
  "python.linting.pylintUseMinimalCheckers": false,
  "suggest.timeout": 5000,
  "html.format.wrapLineLength": 80
}
