{
  "languageserver": {
    "cquery": {
      "command": "cquery",
      "args": ["--log-file=/tmp/cq.log"],
      // disable automatic reveal output channel
      "revealOutputChannelOn": "never",
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    },
    "lua": {
      "command": "java",
      "args": ["-cp", "/home/doron/downloads/EmmyLua-LS-all.jar", "com.tang.vscode.MainKt"],
      "filetypes": ["lua"],
      "rootPatterns": [".git/"]
    }
  },
  "rust-client.rlsPath": "/run/current-system/sw/bin/rls",
  "coc.source.emoji.filetypes": [ "markdown", "pandoc" ],
  "diagnostic.messageTarget": "echo",
  "python.linting.pylintUseMinimalCheckers": false,
  "python.pythonPath": "python3",
  "suggest.timeout": 5000,
  "html.format.wrapLineLength": 80
}
